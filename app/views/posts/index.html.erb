<h1>Listing posts</h1>
<%= link_to 'New post', new_post_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Delete', post_path(post),
                      method: :delete,
                      data: { confirm: 'Are you shure delete post?' } %></td>
    </tr>
  <% end %>

</table>